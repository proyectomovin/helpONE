<div class="uk-width-1-1 nopadding page-right-content"  ng-controller="noticesCtrl">
    <div class="uk-grid page-title noshadow dt-borderBottom">
        <div class="uk-width-4-10 left" style="padding-left: 20px !important;">
            <p>{{title}}</p>
        </div>
        <div class="uk-width-6-10 pagination nomargin nopadding">

        </div>
    </div>
    <!--Content Here-->
    <div class="full-height page-right-content scrollable">
        <div class="">
            <div class="uk-width-1-1" style="padding: 25px;">
                <div class="panel trupanel nopadding no-hover-shadow uk-overflow-hidden" style="min-height: 60px; height: auto;">
                    <div class="panel-body2" style="padding: 20px 15px 15px 15px;">
                        <form id="createNoticeForm" class="uk-form-stacked" action="/">
                            <div class="uk-position-relative">
                                <div class="uk-margin-medium-bottom">
                                    <div class="right">
                                        <div class="md-switch md-green" style="position: absolute; top: 5px; right: -15px; z-index: 99;">
                                            <label>
                                                Ventana de Alerta
                                                <input id="nAlertWindow" name="nAlertWindow" type="checkbox" {{#compare data.notice.alertWindow '==' true}} checked {{/compare}}>
                                                <span class="lever"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <label for="nName">Nombre</label>
                                    <input id="nName" class="md-input md-input-width-medium" name="nName" type="text" value="{{data.notice.name}}" />

                                </div>
                                <div class="uk-margin-medium-bottom">
                                    <label for="nMessage">Mensaje</label>
                                    <input id="nMessage" class="md-input md-input-width-medium" name="nMessage" type="text" value="{{data.notice.message}}" />
                                </div>

                                <div class="uk-margin-medium-bottom">
                                    <label for="nFontColor">Color de Fuente:</label>
                                    <select name="nFontColor" id="nFontColor">
                                        <option value="#f6f6f6">Blanco</option>
                                        <option value="#000000">Negro</option>
                                    </select>
                                </div>
                                <div class="uk-margin-medium-bottom">
                                    <label for="nColor" style="margin-right: 23px;" class="uk-form-label">Color del Aviso:</label>
                                    <select id="nColor" name="nColor">
                                        <option value="#7bd148" {{#compare data.notice.color '==' '#7bd148'}} selected {{/compare}}>Verde</option>
                                        <option value="#5484ed" {{#compare data.notice.color '==' '#5484ed'}} selected {{/compare}}>Azul fuerte</option>
                                        <option value="#a4bdfc" {{#compare data.notice.color '==' '#a4bdfc'}} selected {{/compare}}>Azul</option>
                                        <option value="#46d6db" {{#compare data.notice.color '==' '#46d6db'}} selected {{/compare}}>Turquesa</option>
                                        <option value="#7ae7bf" {{#compare data.notice.color '==' '#7ae7bf'}} selected {{/compare}}>Verde claro</option>
                                        <option value="#51b749" {{#compare data.notice.color '==' '#51b749'}} selected {{/compare}}>Verde fuerte</option>
                                        <option value="#fbd75b" {{#compare data.notice.color '==' '#fbd75b'}} selected {{/compare}}>Amarillo</option>
                                        <option value="#ffb878" {{#compare data.notice.color '==' '#ffb878'}} selected {{/compare}}>Naranja</option>
                                        <option value="#ff887c" {{#compare data.notice.color '==' '#ff887c'}} selected {{/compare}}>Rojo</option>
                                        <option value="#e74c3c" {{#compare data.notice.color '==' '#e74c3c'}} selected {{/compare}}>Rojo fuerte</option>
                                        <option value="#dbadff" {{#compare data.notice.color '==' '#dbadff'}} selected {{/compare}}>Púrpura</option>
                                        <option value="#e1e1e1" {{#compare data.notice.color '==' '#e1e1e1'}} selected {{/compare}}>Gris</option>
                                    </select>
                                </div>


                                <div class="uk-clearfix">
                                    <button type="submit" class="uk-margin-left uk-float-right md-btn md-btn-success md-btn-wave-light" id="createNoticeSubmit" ng-click="submitCreateNoticeForm($event);">Guardar</button>
                                    <a href="/notices" class="uk-float-right md-btn md-btn-wave-light">Atrás</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#contentFor 'js-plugins'}}

{{/contentFor}}